# Set default values for all following accounts.
defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

# Personal account
account personal
host smtp.gmail.com
port 587
protocol smtp
from yatin.lala@gmail.com
user yatin.lala@gmail.com
passwordeval "gpg --batch --quiet --decrypt ~/.local/passwords/mutt.gpg"

account default : personal
