#!/usr/bin/bash -e
TERMINAL='alac'
case $1 in
    bc)
        pgrep -x bc || $TERMINAL -name calc -e bc -q
        i3-msg "[instance=calc] scratchpad show; [instance=calc] move position center";;
    blueman-applet)
        pgrep -x "blueman-applet" && killall blueman-applet || setsid blueman-applet &;;
    blueman-manager)
        pgrep -x "blueman-manager" && killall blueman-manager || setsid blueman-manager &;;
    bluetooth)
        rfkill unblock 0
        pgrep -x bluetoothctl || ($TERMINAL --class bluetooth -e bluetoothctl && sleep .1)
        i3-msg "[instance=bluetooth] scratchpad show; [instance=bluetooth] move position center";;
    calendar)
        wmctrl -l | grep -q "pointer Google Calendar" || \
        (gtk-launch calendar; sleep 1)
        i3-msg "[instance=crx_kjbdgfilnfhdoflbpgamdcdgpehopbep] scratchpad show; \
        [instance=crx_kjbdgfilnfhdoflbpgamdcdgpehopbep] move position center";;
    cmus)
        pgrep -x cmus || ($TERMINAL --class cmus -e cmus && sleep .1)
        i3-msg "[app_id=cmus] scratchpad show; [app_id=cmus] move position center";;
    discord)
        pgrep -x discord || setsid discord &
        i3-msg "workspace 9; [class=discord] focus";;
    espanso)
        pgrep -x espanso && (espanso stop; notify-send -t 1000 "Espanso stopped.") || \
        setsid espanso daemon &;;
    ferdium)
        pgrep -x ferdium || setsid ferdium &
        i3-msg "workspace 9; [class=Ferdium] focus";;
    gmail)
        wmctrl -l | grep -q "pointer Gmail" || \
        (gtk-launch gmail; sleep 1)
        i3-msg "[instance=crx_fmgjjmmmlfnkbppncabfkddbjimcfncm] scratchpad show; \
        [instance=crx_fmgjjmmmlfnkbppncabfkddbjimcfncm] move position center";;
    habitica)
        wmctrl -l | grep -q "pointer Habitica" || (gtk-launch habitica; sleep 1)
        i3-msg "[instance=crx_pdigihnmoiplkhocekidmdcmhchhdpjo] scratchpad show; \
            [instance=crx_pdigihnmoiplkhocekidmdcmhchhdpjo] move position center";;
    mailspring)
        pgrep -x mailspring || setsid mailspring &
        i3-msg "workspace 9; [class=Mailspring] focus";;
    music)
        pgrep -x "spotify|cmus|spotifyd" && playerctl --player=spotify,cmus,spotifyd play-pause;;
    music-player)
        i3-msg "[instance=spotify] scratchpad show; [instance=spotify] move \
        position center; [app_id=cmus] scratchpad show; [app_id=cmus] move \
        position center"
        ;;
    nextcloud) pgrep -x "nextcloud" && killall nextcloud || setsid nextcloud &
            ;;
    nm-applet)
        pgrep -x "nm-applet" && killall nm-applet || setsid nm-applet &;;
    notes)
        wmctrl -l | grep -q "pointer notes" || \
        # swaymsg -t get_tree | grep "\"app_id\": \"notes\"" || \
        $TERMINAL --class notes --title notes -e nvim ~/documents/wiki/index.md && sleep 0.1
        i3-msg "[instance=notes] scratchpad show; [instance=notes] move position center";;
    pavucontrol)
        pgrep -x "pavucontrol" || setsid pavucontrol &
        i3-msg "[title=pavucontrol] scratchpad show; [title=pavucontrol] move position center";;
    picom)
        pgrep -x picom && killall picom || setsid picom;;
    pulsemixer)
        pgrep -x pulsemixer || ($TERMINAL --class pulsemixer -e pulsemixer && sleep .20)
        i3-msg "[instance=pulsemixer] scratchpad show; [instance=pulsemixer] move position center";;
    redshift)
        pgrep -x "redshift" && (killall redshift; notify-send -t 1000 "Killing redshift.") || \
        (notify-send -t 1000 "Starting Redshift."; setsid redshift -b 1:1);;
    redshift-dark)
        pgrep -x "redshift" && (killall redshift; notify-send -t 1000 "Killing redshift.") || \
        (notify-send -t 1000 "Starting Redshift."; setsid redshift -b 1:.5);;
    gammastep)
        pgrep -x "gammastep" && (killall gammastep; notify-send -t 1000 "Killing gammastep") || \
        (notify-send -t 1000 "Starting Gammastep."; setsid gammastep -l 39.898491:-75.343880);;
    gammastep-dark)
        pgrep -x "gammastep" && (killall gammastep; notify-send -t 1000 "Killing gammastep") || \
        (notify-send -t 1000 "Starting Gammastep."; setsid gammastep -b 1:.3 -l 39.898491:-75.343880);;
    signal)
        pgrep -x signal-desktop || setsid signal-desktop &
        i3-msg "workspace 9; [class=Signal] focus";;
    spotify)
        (wmctrl -l | grep -q "pointer Spotify") || setsid spotify-launcher &
        i3-msg "[instance=spotify] scratchpad show; [instance=spotify] move position center";;
    spotify-web)
        wmctrl -l | grep -q "pointer Spotify" || (gtk-launch spotify; sleep 1)
        i3-msg "[instance=crx_pjibgclleladliembfgfagdaldikeohf] scratchpad show; [instance=crx_pjibgclleladliembfgfagdaldikeohf] move position center";;
    spotifyd)
        pgrep -x spotifyd && (notify-send -t 1000 "Killing spotifyd."; killall spotifyd) || \
        (notify-send -t 1000 "Starting spotifyd."; setsid spotifyd &);;
    spotify-tui)
        pgrep -x "spotifyd" || spotifyd &
        pgrep -x spt || ($TERMINAL --class spt -e spt && sleep .1)
        i3-msg "[instance=spt] scratchpad show; [instance=spt] move position center";;
    tmux);;
    todoist)
        wmctrl -l | grep -q "pointer Todoist" || (gtk-launch todoist; sleep 1)
        i3-msg "[instance=crx_elldfnmogicegdcphgljaoaklkpcnbnn] scratchpad show; [instance=crx_elldfnmogicegdcphgljaoaklkpcnbnn] move position center";;
    torbrowser)
        wmctrl -l | grep -q "Tor Browser" || setsid torbrowser-launcher &
        i3-msg "workspace 7";;
    whatsapp)
        wmctrl -l | grep -q "pointer WhatsApp" || (gtk-launch whatsapp; sleep 1)
        i3-msg workspace 9;;
        # pgrep whatsapp || flatpak run io.github.mimbrero.WhatsAppDesktop
        # i3-msg workspace 9;;
    # *) echo "Invalid argument.";;
esac
