refresh-on-startup yes
show-title-bar no
external-url-viewer "urlview"

browser w3m-xdg

macro b set browser "brave %u &" ; open-in-browser ; set browser w3m-xdg
macro q set browser "setsid mpv --no-terminal %u > $XDG_CACHE_HOME/newsboat.setsid 2>&1 &" ; open-in-browser ; set browser w3m-xdg
macro v set browser "setsid mpv --no-terminal --ytdl-format='bestvideo[height<=720]+bestaudio/best[height<=720]' %u > $XDG_CACHE_HOME/newsboat.setsid 2>&1 &" ; open-in-browser ; set browser w3m-xdg
macro d set browser "youtube-dl -q --add-metadata -i -o '~/videos/%(title)s.%(ext)s' %u"; open-in-browser ; set browser w3m-xdg

bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key h quit
bind-key l open
bind-key d pagedown
bind-key u pageup
bind-key u show-urls

