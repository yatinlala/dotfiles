browser lynx


macro b set browser "gtk-launch brave-browser %u > /dev/null 2>&1" ; open-in-browser ; set browser lynx
macro i set pager "$XDG_CONFIG_HOME/newsboat/kitty-img-pager.sh"; open; set pager internal
macro q set browser "setsid mpv --no-terminal --ytdl-format='bestvideo[height<=1080]+bestaudio/best[height<=1080]' %u > $XDG_CACHE_HOME/newsboat.setsid 2>&1 &" ; open-in-browser ; set browser lynx
macro v set browser "setsid mpv --no-terminal --ytdl-format='bestvideo[height<=720]+bestaudio/best[height<=720]' %u > $XDG_CACHE_HOME/newsboat.setsid 2>&1 &" ; open-in-browser ; set browser lynx
macro d set browser "yt-dlp --embed-chapters --embed-metadata --embed-subs --sub-langs '\''en.*'\ -o '~/videos/todo/%(title)s.%(ext)s' %u"; open-in-browser ; set browser lynx

