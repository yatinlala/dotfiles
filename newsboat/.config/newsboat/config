browser w3m-xdg

macro l set browser "nohup lbry %u > $XDG_CACHE_HOME/lbry.nohup 2>&1 &" ; open-in-browser ; set browser w3m-xdg
macro v set browser "devour mpv %u" ; open-in-browser ; set browser w3m-xdg
macro m set browser "nohup mpv %u > $XDG_CACHE_HOME/mpv.nohup 2>&1 &" ; open-in-browser ; set browser w3m-xdg
macro g set browser "lbryget %u &" ; open-in-browser ; set browser w3m-xdg
macro d set browser "youtube-dl -q --add-metadata -i -o '~/videos/%(title)s.%(ext)s' %u"; open-in-browser ; set browser w3m-xdg
