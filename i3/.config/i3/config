#--------------------------------------------------
#-----------------General Settings-----------------
#--------------------------------------------------
set $mod Mod1
set $win Mod4
set $term urxvtc
set $term2 st

font pango:Deja Vu Sans Mono 14
smart_gaps on 
smart_borders on
gaps inner 0 
gaps outer 0
for_window [class="^.*"] border pixel 2 

default_orientation vertical
 for_window [class=".*"] split toggle
bindsym $mod+q split toggle kill
# bindsym $mod+q kill

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

#--------------------------------------------------
#-----------------Program Shortcuts----------------
#--------------------------------------------------
 
bindsym $mod+Return exec $term
bindsym $win+Return exec $term2 

# Boot and Screen Control
bindsym $mod+s exec snoozemenu
bindsym $mod+shift+s exec $term -e shutdown now
bindsym $mod+shift+r exec $term -e reboot

#Camera and Audio
bindsym $mod+shift+c exec guvcview
bindsym $mod+shift+v exec pavucontrol

#Text Replacement
bindsym $mod+e exec espanso daemon
bindsym $mod+shift+e exec espanso stop

#Text Editor
bindsym $mod+i exec $term -e nvim
bindsym $mod+shift+i exec $term -e sudo nvim

#File Manager
bindsym $mod+a exec $term -e lf
bindsym $mod+shift+a exec $term -e sudo lf

#App Launcher
bindsym $mod+space exec rofi -show drun -drun-display-format {name}
bindsym $mod+r exec rofi -show run

#Browser
bindsym $mod+b exec firefox
bindsym $mod+shift+b exec firefox -no-remote -P privacy
bindsym $mod+t exec sh -c "/home/nitay/.local/source/tor-browser/start-tor-browser"

#Email
bindsym $mod+m exec $term -e neomutt
bindsym $mod+shift+m exec minecraft-launcher

# Screenshots
bindsym --release $win+s exec scrot --select -e 'mv $f ~/pictures/screenshots/%Y-%m-%d-%H-%M-%S.png' #Selection
bindsym --release $win+shift+s exec scrot -e 'mv $f ~/pictures/screenshots/%Y-%m-%d-%H-%M-%S.png' #Fullscreen

bindsym $mod+n exec $term -e newsboat -u .config/newsboat/urls -c .config/newsboat/cache.db -C .config/newsboat/config
bindsym $mod+c exec $term -e cmus
bindsym $mod+shift+g exec gtk-straw-viewer
bindsym $mod+p exec passmenu


