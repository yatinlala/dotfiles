#!/usr/bin/env bash

# Don't terminate
trap -- '' SIGINT SIGTERM

echo "" > $XDG_CACHE_HOME/pomo.cache

notify-send "Start work!"

pkill -SIGRTMIN+4 i3status-rs

nmcli device disconnect wlp0s20f3

min=5
sec=0

i3-msg 'bindsym Mod4+0 workspace 1'

while [ $min -ge 0 ]; do
    while [ $sec -ge 0 ]; do
        echo "ï€® $min:$sec" > $XDG_CACHE_HOME/pomo.cache
        pkill -SIGRTMIN+4 i3status-rs
        let "sec=sec-1"
        wifi off
        sleep 1
    done
    sec=59
    let "min=min-1"
done

echo "" > $XDG_CACHE_HOME/pomo.cache
pkill -SIGRTMIN+4 i3status-rs

wifi on

i3-msg 'bindsym Mod4+0 workspace 10'

notify-send "Done!"
