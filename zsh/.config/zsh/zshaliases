#General improvements
alias df='df -h'                          # human-readable sizes
alias free='free -m'                      # show sizes in MB
alias info='info --vi-keys'
alias bc='bc -lq'
alias tetris='netris -k "hHklLJjs frn"'

#Colorize!
alias grep='grep --color=auto --exclude-dir=.git'
alias ls='ls --color=auto'

#Shorten frequently used commands
alias e='nvim'
alias t='tmux'
alias la='ls -Al'
alias ll='ls -l'
alias ka='killall'
alias s='sudo'
alias se='sudoedit'
alias p='pacman'
alias mmute='echo 0 | sudo tee /sys/class/leds/platform::micmute/brightness'
alias musb='sudo mount /dev/sda1 ~/.local/usb'
alias uusb='sudo umount ~/.local/usb'
alias wallpaper='feh --bg-fill --no-fehbg --recursive --randomize ~/pictures/wallpapers'
alias domains="sudo tcpdump -l port 53 2>/dev/null | grep --line-buffered ' A? ' | cut -d' ' -f8"

#Devouring
alias d='devour'
alias feh='devour feh --scale-down'
alias mpv='devour mpv'

#Git
alias gs='git status'
alias gl='git log'
alias ga='git add'
alias gc='git commit'
alias gr='git restore'
alias gd='git diff'
alias gp='git push'

alias myip='curl -4 https://icanhazip.com'

#Confirm before danger
alias rm='rm -i'

#Automate frequent commands
alias reflector="sudo reflector -f 30 -l 30 --number 10 --verbose --save /etc/pacman.d/mirrorlist"

#Jumps
alias ss='cd ~/code/scripts/'
alias .dot='cd ~/.dotfiles/'

#File Jumps
alias lfrc='nvim ~/.config/lf/lfrc'
alias wmc='nvim ~/.config/i3/config'
alias zshrc='nvim ~/.config/zsh/.zshrc'
alias zshaliases='nvim ~/.config/zsh/zshaliases'
alias zshenv='nvim ~/.config/zsh/.zshenv'

alias wiki='nvim ~/documents/wiki/index.md'

#Media
alias yt='youtube-dl --add-metadata -i'
alias yta='youtube-dl --add-metadata -i -f bestaudio/best'
alias ytp="youtube-dl --add-metadata -o '%(playlist_index)2d - %(title)s.%(ext)s' -i"
alias ffmp3="ffmpeg -i '${FILE}' -vn -ab 128k -ar 44100 -y '${FILE%.webm}.mp3'"

#XDG Compliance
alias audacity='xdg-launch audacity'
alias librewolf='xdg-launch librewolf'
alias minecraft-launcher='xdg-launch minecraft-launcher'
alias w3m='xdg-launch w3m'
alias newsboat="newsboat -u .config/newsboat/urls -c .config/newsboat/cache.db -C .config/newsboat/config"
alias wget='wget --hsts-file="$XDG_CACHE_HOME/wget-hsts"'
alias yarn='yarn --use-yarnrc "$XDG_CONFIG_HOME/yarn/config"'

#Aliases work after command
alias sudo='sudo '
alias devour='devour '
